    "clean",
    "ignore",
    "recursive",
    "test",
    "filter"
  ],
  "author": "synchronous",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/edge/clean-copy/issues"
  },
  "homepage": "https://github.com/edge/clean-copy#readme",
  "devDependencies": {
    "babel-eslint": "^7.0.0",
    "babel-preset-latest": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.16.3",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "chai-fs": "^0.1.0",
    "eslint": "^3.8.0",
    "mkdirp": "^0.5.1",
    "mocha": "^3.1.2",
    "rimraf": "^2.5.4"
  },
