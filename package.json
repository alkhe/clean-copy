{
  "name": "clean-copy",
  "version": "0.0.2",
  "description": "Recursively copy while ignoring certain directories (e.g. node_modules)",
  "main": "index.js",
  "scripts": {
    "test": "mocha --require babel-register",
    "lint": "eslint src",
    "build": "babel src --out-dir lib",
